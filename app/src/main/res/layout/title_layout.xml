<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/t_recy_frame_layout"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_margin="2dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/t_circleImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:background="@drawable/oval"/>
    <TextView
        android:id="@+id/t_recy_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="8dp"
        android:fontFamily="serif"
        android:layout_toRightOf="@id/t_circleImageView"
        android:lines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/t_recy_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/t_circleImageView"
        android:layout_below="@id/t_recy_title_text"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/t_recy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t_recy_title_text"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="serif" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
